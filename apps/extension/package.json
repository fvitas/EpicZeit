{
  "name": "@epiczeit/extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "chrome",
    "firefox",
    "extension",
    "time",
    "zones",
    "time zones",
    "new tab"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "watch": "vite build -w",
    "preview": "vite preview"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@vitejs/plugin-react-swc": "3.6.0",
    "autoprefixer": "10.4.17",
    "postcss": "8.4.35",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "1.0.7",
    "vite": "5.1.4"
  }
}
